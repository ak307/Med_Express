<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/surgical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <ImageButton
            android:id="@+id/filterBackBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="serif"
            android:text="Sort By"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>



    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/surgicalChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="surgical"
            android:textColor="@color/black"
            app:chipBackgroundColor="@color/grey"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/alcoholChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alcohol"
            android:textColor="@color/black"
            app:chipBackgroundColor="@color/grey"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>


        <com.google.android.material.chip.Chip
            android:id="@+id/testKitChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test kit"
            android:textColor="@color/black"
            app:chipBackgroundColor="@color/grey"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/filterApplyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="48sp"
        android:paddingEnd="48sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Apply"
        android:textColor="@color/black"
        android:background="@drawable/round_border" />


</LinearLayout>