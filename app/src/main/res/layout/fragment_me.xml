<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MeFragment">


    <Button
        android:id="@+id/meLogInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:background="@drawable/round_border"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="2dp"
        android:src="#000000" />

    <LinearLayout
        android:id="@+id/cartLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="serif"
            android:paddingStart="8dp"
            android:text="Cart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="2dp"
        android:src="#000000"
        android:layout_marginBottom="80dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="2dp"
        android:src="#000000"/>


    <LinearLayout
        android:id="@+id/wishListLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="serif"
            android:paddingStart="8dp"
            android:text="My Wishlist"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="2dp"
        android:src="#000000"/>


    <LinearLayout
        android:id="@+id/myRatingLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="serif"
            android:paddingStart="8dp"
            android:text="My Rating"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="8dp"/>

    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="2dp"
        android:src="#000000"/>


    <LinearLayout
        android:id="@+id/trackOrderLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="serif"
            android:paddingStart="8dp"
            android:text="Track Order Delivery"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="8dp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="2dp"
        android:src="#000000"/>


    <LinearLayout
        android:id="@+id/purchaseHistoryLLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="serif"
            android:paddingStart="8dp"
            android:text="Purchased History"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" > "
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:padding="2dp"
        android:src="#000000"
        android:layout_marginBottom="150dp"/>



    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logout"
        android:background="@drawable/round_border"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"/>


</LinearLayout>